{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "source/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "hidePageWhileLoading": {
        "order": 1,
        "title": "Hide the page until the background image has loaded",
        "type": "boolean",
        "default": true
      },
      "imageOptions": {
        "order": 2,
        "type": "object",
        "title": "Background image options",
        "properties": {
          "blur": {
            "order": 1,
            "title": "Blur",
            "type": "boolean",
            "default": false
          },
          "grayscale": {
            "order": 2,
            "title": "Grayscale",
            "type": "boolean",
            "default": false
          }
        }
      }
    }
  }
}
